<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taramt.autolog.ControllerActivity" >

    <Button
        android:id="@+id/Datausage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="59dp"
        android:onClick="openActivity"
        android:text="DatausageLog" />

    <Button
        android:id="@+id/NotificationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Datausage"
        android:layout_below="@+id/Datausage"
        android:onClick="openActivity"
        android:text="NotificationLog" />

    <Button
        android:id="@+id/screenActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/NotificationDetails"
        android:layout_below="@+id/NotificationDetails"
        android:layout_marginTop="19dp"
        android:text="ScreenActivity"
        android:onClick="openActivity" />

</RelativeLayout>
